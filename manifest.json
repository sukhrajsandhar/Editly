{
  "manifest_version": 3,
  "name": "Editly",
  "version": "1.0.0",
  "description": "A modern image editor Chrome extension with screenshot capabilities",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com;"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

